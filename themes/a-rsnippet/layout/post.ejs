---
layout: layout
---
<!-- post.ejs -->

<style>
.popular-posts-item {
  list-style-type: none;
}
.popular-posts-title a {
  font-size: 16px;
}
.popular-posts-title h3 {
  margin: 5px;
  font-weight: normal;
}
.related-posts {
  font-weight: 400;
  font-size: 18px;
}
</style>
<article>
    <div class="container">
      <div class="col-lg-8 col-lg-offset-1 col-sm-9">
          <% if(config.add_this_id) {%>
            <div class="text-center"><%- include('_third-party/share/add-this') %></div><hr>
          <% } %>
          <%- config["content_before_post"] %>
          <%- page.content %>
          <% if (config.related_posts && popular_posts( {} , page )) {%>
            <div class='related-posts'>Related Posts:</div>
            <%- popular_posts( {} , page ) %>
          <% } %>
          <% if (config["content_after_post"]) { %>
            <%- config["content_after_post"] %>
          <% } %>

        </ul>

          <hr>
          <ul class="pager">
              <% if (page.prev){ %>
              <li class="previous">
                  <a href="<%- url_for(page.prev.path) %>" data-toggle="tooltip" data-placement="left"
                     title="<%- page.prev.title %>">&larr; <%- __('pagination.previous_post') %></a>
              </li>
              <% } %>
              <% if (page.next){ %>
              <li class="next">
                  <a href="<%- url_for(page.next.path) %>" data-toggle="tooltip" data-placement="top"
                     title="<%- page.next.title %>"><%- __('pagination.newer_post') %>&rarr;</a>
              </li>
              <% } %>
          </ul>
        <%- partial('_partial/comments') %>
        <%- include('_partial/toc')  %>
      </div>
  </div>
</article>
